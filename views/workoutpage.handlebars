{{!-- <div class="workoutpage"> --}}
  <div class="workout-container">
    <h1 class="row" id="form-color">
      Choose which muscle group you would like to workout today!
    </h1>
  </div>

   <!-- Modal; will appear when button for exercise is clicked-->
   {{#each MuscleGroups as |muscle|}}
  <div class="modal fade" id="{{this}}Modal" tabindex="-1" aria-labelledby="{{this}}ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="{{this}}ModalLabel">Today's Workout:</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          {{muscle.muscle_name}}
          {{muscle.description}}
          {{muscle.exercises_id}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary redirect-btn">Cool Down Page</button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}

  {{!-- new carousel/cleaner code --}}
  <div id="carouselExampleControls" class="carousel" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="card">
          <div class="image-wrapper"><img src="" alt="Slide 1"></div>
          <div class="card-body">
            <h5 class="card-title">Back and Biceps</h5>
            <p class="card-text">The main focus will be on your lats and biceps.</p>
            <a href="optionpg"class="btn btn-primary previousPageLink">Previous Page</a>
             <button type="button" class="btn btn-primary modal-open" data-bs-toggle="modal" data-bs-target="#{{muscle}}Modal"
            data-muscle="{{muscle}}">Back and Biceps</button>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <div class="card">
